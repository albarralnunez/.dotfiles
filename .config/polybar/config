[colors]
background = #282828
background-alt = #504945
foreground = #ebdbb2
foreground-alt = #ebdbb2

red = #fb4934
green = #b8bb26
yellow = #fabd2f
blue = #83a598
purple = #d3869b
aqua = #8ec07c
orange = #fe8019
white = #ffffff

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/primary]
monitor = ${env:MONITOR:}
width = 100%
height = 24
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
underline-size = 2

border-bottom-size = 2
border-bottom-color = #333

spacing = 0
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = DejaVu Sans Mono Nerd Font:pixelsize=10;0
font-1 = DejaVu Sans Mono Nerd Font:size=7;-1

modules-left = powermenu xmonad
modules-center = music 
modules-right = updates temperature memory cpu volume battery date

tray-position = right
tray-padding = 2

[module/xmonad]
type = custom/script
exec = xmonad-log
tail = true

[module/music]
type = custom/script
exec = $HOME/.local/usr/bin/np.py
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.yellow}
label = %output:0:90:...%
tail = true

[module/updates]
type = custom/script
exec = $HOME/.local/usr/bin/updates.sh
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.orange}
tail = false
interval = 120

[module/volume]
type = internal/alsa
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
label-muted = 
label-muted-foreground = ${colors.red}
format-volume = <ramp-volume> <label-volume>
format-muted = "<label-muted> -- "
format-muted-prefix-foreground = ${colors.foreground-alt}
format-muted-underline = ${colors.white}
format-volume-prefix-foreground = ${colors.foreground-alt}
format-volume-underline = ${colors.white}

mapping = true
tail = false


[module/date]
type = internal/date
interval = 1
date = " %b %d"
date-alt = " %Y-%m-%d"
time = "%H:%M:%S"
time-alt = "%H:%M:%S"
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.aqua}
label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 97
time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.purple}
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}
format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}
label-discharging = "%percentage%% %time%"
ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""
ramp-capacity-foreground = ${colors.foreground-alt}
animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-2 = ""
animation-charging-3 = ""
animation-charging-4 = ""
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750
; vim:ft=dosini

[module/memory]
type = internal/memory
interval = 3
format-prefix = " "
format-underline = ${colors.blue}

[module/cpu]
type = internal/cpu
interval = 3
format-prefix = "龍 "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.red}
label = %percentage%%

[module/temperature]
type = custom/script
interval = 15
exec = $HOME/.local/usr/bin/temperature.sh
format-underline = ${colors.yellow}
format = <label>

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = "  "
label-open-foreground = ${colors.red}
label-close = "    "
label-close-foreground = ${colors.red}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = "    "
menu-0-0-exec = menu-open-1
menu-0-1 = "  ⭘  "
menu-0-1-exec = menu-open-2

menu-1-0 = "    "
menu-1-0-exec = menu-open-0
menu-1-1 = "  ⭘  "
menu-1-1-exec = sudo reboot

menu-2-0 = "    "
menu-2-0-exec = sudo poweroff
menu-2-1 = "    "
menu-2-1-exec = menu-open-0
